var arm_tapped = false
var base_tapped = false

func _process(delta):
	if arm_tapped and base_tapped:
		$\"NextButton\".disabled = false


func _on_TextureButtonArm_pressed():
	$TextureButtonArm.modulate = Color(\"f2d449\")
	arm_tapped = true
	$AnimationPlayer.play(\"Correct\")


func _on_TextureButtonBase_pressed():
	$TextureButtonBase.modulate = Color(\"f2d449\")
	base_tapped = true
	$AnimationPlayer.play(\"Correct\")
"

